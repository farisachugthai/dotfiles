#!/data/data/com.termux/files/usr/bin/bash
# Script that utilizes the "Share link" feature of the YouTube app.
# Assumes Termux and Android OS.
# Maintainer: Faris Chugthai

# TODO: Use more robust regex for metadata and title.
# Then start using 3rd party packages to fill in gaps. id3tag, picard, eyeD3
# hopefully whatever requires the least effort so that might rule out ffmpeg...

# mp3
youtube-dl --config-location "$HOME/.config/youtube-dl/config-mp3" "$1"

# mp3 playlist
# youtube-dl --config-location "$HOME/.config/youtube-dl/config-mp3-playlist" "$1"

# mp4
# youtube-dl --config-location "$HOME/.config/youtube-dl/config-mp4" "$1"

exit 0
