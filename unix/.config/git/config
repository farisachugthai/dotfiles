# Global Git Config
# Vim: set ft:gitconfig:

[user]
    email = farischugthai@gmail.com
    name = farisachugthai

[core]
    autocrlf = input
    editor = nvim
    excludesfile = "$HOME/.config/git/ignore"
    pager = less -rMFXKL
    repositoryformatversion = 0
    filemode = false
    bare = false
    logallrefupdates = true

[color]
    branch = always
    diff = true
    interactive = auto
    pager = true
    ui = true

# Man git-difftool: Line 85
# If difftool settings havent been set, fall back to mergetool
[diff]
    color = auto
    prompt = false
    # detect copied files as well as renames. affects merge and status.renames
    renames = copy
    strategy-option = resolve
    tool = vimdiff

[merge]
    autoStash
    color = auto
    mergestyle = diff3
    prompt = false
    strategy-option = resolve
    tool = vimdiff

# this is from justinmk and i don't know how it works however its how he has his system
# configured to use nvim as the difftool
# https://github.com/neovim/neovim/issues/2377
[mergetool "vimdiff"]
    cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[push]
    default = simple

[sequence]
    editor = nvim

[branch]
    autosetupmerge = true

[pager]
    status = true

[alias]
    # From: https://git-scm.com/book/en/v2/Git-Basics-Git-Aliases
    ci = commit
    co = checkout
    last = log -1 HEAD
    unstage = reset HEAD --

    # From varying Gists
    rel = rev-parse --show-prefix
    root = rev-parse --show-toplevel
    staged = diff --cached
    unstaged = diff

    # From: https://githowto.com/history
    # Run check git-log
    hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short

    # General.
    br = branch
    bra = branch -a
    cl =  clone
    cls= clone --depth 1
    d = diff
    dt = difftool
    f = fetch --all
    m = merge
    mt = mergetool
    s = status
    r = remote -v

[help]
    autocorrect = 1

[credential]
    helper = cache --timeout=86400

[credential "https://www.github.comm"]
    username = farisachugthai

[web]
    browser = firefox

[rebase]
    stat = True
    autoStash = True

[status]
    showStash = True
    showUntrackedFiles = all

[pull]
    rebase = True
