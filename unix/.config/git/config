[user]
    email = farischugthai@gmail.com
    name = farisachugthai

[core]
    autocrlf = input
    editor = nvim
    excludesfile = "$HOME/.config/git/ignore"
    pager = less -rL

[color]
    branch = always
    diff = true
    interactive = auto
    pager = true
    ui = true

# Man git-difftool: Line 85
# If difftool settings havent been set, fall back to mergetool
[diff]
    color = auto
    prompt = false
    strategy-option = resolve
    tool =  vimdiff

[merge]
    color = auto
    mergestyle = diff3
    prompt = false
    strategy-option = resolve
    tool = vimdiff

# [mergetool "vimdiff"]
#         cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[push]
    default = simple

[sequence]
    editor = nvim

[branch]
    autosetupmerge = true

[pager]
    status = true

[alias]
    # From: https://git-scm.com/book/en/v2/Git-Basics-Git-Aliases
    last = log -1 HEAD
    unstage = reset HEAD

    # From varying Gists
    staged = diff --cached
    unstaged = diff

    # Fix unexpected behavior
    ls = ls-files

    # From: https://githowto.com/history
    # Run check git-log
    hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short

[help]
    autocorrect = 1

[credential]
    helper = cache

