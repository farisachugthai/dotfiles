    # lfs.clean=git-lfs clean -- %f
    # lfs.process=git-lfs filter-process
    # lfs.required=true
    # lfs.smudge=git-lfs smudge -- %f

[gc]
    auto = 3000   # the default is 6700 but that sounds really high

[grep]
    lineNumber = true
    extendedRegexp = true

