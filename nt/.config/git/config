    fontdiff = -family \"Fira Code Retina\" -size 10 -weight normal -slant roman -underline 0 -overstrike 0
    encoding = utf-8
    tabsize = 4
    recentrepo = C:/Users/faris/projects/viconf
    diffcontext = 2
